<h2>Available drones</h2>

<hr>

{{#each allTheDronesFromDB }}
    <div>
        <h4> {{ name }} </h4>
        <h5> Propellers: {{ propellers }} </h5>
        <h5> Speed: {{ maxSpeed }} </h5>
        <a href="/drones/{{_id}}/edit"> Edit Drone </a>

        <hr>

        <form action="/drones/{{id}}/delete" method="post">
        <button> Delete </button>
        </form>
        
    </div>
{{/each}}

<a href="/drones/create"> Create a new drone </a>
